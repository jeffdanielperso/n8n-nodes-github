{
    "name": "n8n-nodes-github-action",
    "version": "0.1.0",
    "description": "Github Actions for n8n",
    "license": "MIT",
    "homepage": "https://n8n.io",
    "author": {
        "name": "Jeff Daniel",
        "email": "jeff.daniel@ziwo.io"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jeffdanielperso/n8n-nodes-github-action.git"
    },
    "main": "index.js",
    "scripts": {
        "dev": "npm run watch",
        "build": "tsc && gulp",
        "tslint": "tslint -p tsconfig.json -c tslint.json",
        "watch": "tsc --watch",
        "test": "jest"
    },
    "files": [
        "dist"
    ],
    "n8n": {
        "credentials": [
        ],
        "nodes": [
            "dist/nodes/GithubAction/GithubAction.node.js"
        ]
    },
    "devDependencies": {
        "@types/express": "^4.17.12",
        "@types/jest": "^26.0.23",
        "@types/lodash": "^4.14.170",
        "@types/node": "^15.12.5",
        "@types/request-promise-native": "^1.0.17",
        "gulp": "^4.0.2",
        "jest": "^27.0.5",
        "n8n-workflow": "^0.62.0",
        "ts-jest": "^27.0.3",
        "tslint": "^5.20.1",
        "typescript": "~4.3.4"
    },
    "dependencies": {
        "lodash": "^4.17.21",
        "n8n-core": "^0.75.0",
        "npm-check-updates": "^11.7.1"
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testURL": "http://localhost/",
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "testPathIgnorePatterns": [
            "/dist/",
            "/node_modules/"
        ],
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "json"
        ]
    }
}
